# Copy to .env and fill values. MUST set SANDBOX=1 to run this intentionally vulnerable app.
PORT=4000
NODE_ENV=development
SANDBOX=1

# JWT secret used to sign tokens in sandbox
JWT_SECRET=change_this_to_a_long_random_secret_in_local_dev

# Path to sqlite database file (relative to project root)
DATABASE_FILE=./server/db/xploitsim.sqlite

# Optional: Admin password for seed override
ADMIN_PWD=admin123
